<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sunnietech.hotflicks" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme.WithoutActionBar" >
        <activity
            android:name="com.sunnietech.hotflicks.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.sunnietech.hotflicks.MovieDetailActivity"
            android:label="@string/title_activity_movie_detail" />
        <activity
            android:name="com.sunnietech.hotflicks.SettingsActivity"
            android:label="@string/preference_setting"
            android:parentActivityName="com.sunnietech.hotflicks.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.sunnietech.hotflicks.MainActivity" />
        </activity>

        <provider
            android:name="com.sunnietech.hotflicks.data.MovieProvider"
            android:authorities="com.sunnietech.hotflicks" />

        <activity
            android:name="com.sunnietech.hotflicks.YouTubePlayerActivity"
            android:label="@string/title_activity_you_tube_player" >
        </activity>
        <activity
            android:name="com.sunnietech.hotflicks.MovieReviewActivity"
            android:label="@string/title_activity_movie_review" >
        </activity>
    </application>

</manifest>
